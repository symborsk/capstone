<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AIHubMobile.WeatherItemDetailPage"
             Title="{Binding Title}">

    <ListView x:Name="WeatherSetListView"
              VerticalOptions="FillAndExpand"
              HasUnevenRows="true">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <Grid>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"  />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*"  />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="35*" />
                            <ColumnDefinition Width="65*" />
                        </Grid.ColumnDefinitions>


                        <Label Text="Recorded Time: "    
                                   LineBreakMode="NoWrap" 
                                   Style="{DynamicResource ListItemTextStyle}" 
                                   FontSize="Micro" Grid.Row="0" Grid.Column="0"/>
                        <Label Text="{Binding RecordedTime}" 
                                       LineBreakMode="NoWrap"
                                       Style="{DynamicResource ListItemDetailTextStyle}"
                                       FontSize="Micro" Grid.Row="0" Grid.Column="1"/>

                        <Label Text="Temperature: "    
                                   LineBreakMode="NoWrap" 
                                   Style="{DynamicResource ListItemTextStyle}" 
                                   FontSize="Micro" Grid.Row="1" Grid.Column="0"/>
                        <Label Text="{Binding Temperature}" 
                                       LineBreakMode="NoWrap"
                                       Style="{DynamicResource ListItemDetailTextStyle}"
                                       FontSize="Micro" Grid.Row="1" Grid.Column="1"/>

                        <Label Text="Humidity: "    
                                   LineBreakMode="NoWrap" 
                                   Style="{DynamicResource ListItemTextStyle}" 
                                   FontSize="Micro" Grid.Row="2" Grid.Column="0"/>
                        <Label Text="{Binding Humidity}" 
                                       LineBreakMode="NoWrap"
                                       Style="{DynamicResource ListItemDetailTextStyle}"
                                       FontSize="Micro" Grid.Row="2" Grid.Column="1"/>

                        <Label Text="Visibility: "    
                                   LineBreakMode="NoWrap" 
                                   Style="{DynamicResource ListItemTextStyle}" 
                                   FontSize="Micro" Grid.Row="3" Grid.Column="0"/>
                        <Label Text="{Binding Visibility}" 
                                       LineBreakMode="NoWrap"
                                       Style="{DynamicResource ListItemDetailTextStyle}"
                                       FontSize="Micro" Grid.Row="3" Grid.Column="1"/>
                    </Grid>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
